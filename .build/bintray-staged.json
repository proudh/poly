{
   "package": {
        "name": "staged",
        "repo": "poly",
        "subject": "dvonthenen"
    },

    "version": {
        "name": "${SEMVER}",
        "desc": "${DSCRIP}",
        "released": "${RELDTE}",
        "gpgSign": false
    },

    "files": [
        {
            "includePattern": ".build/deploy/(.+)/(.*\.tar\.gz)",
            "excludePattern": ".build/deploy/latest/(.*)",
            "uploadPattern": "staged/${SEMVER}/$2"
        },
        {
            "includePattern": ".build/deploy/latest/(.*)",
            "uploadPattern": "staged/latest/$1"
        }
    ],

    "publish": true
}
